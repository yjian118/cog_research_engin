<% content_for(:content) do %>
  <% if content_for? :sidebar %>
    <section id="content" class="<%= main_content_classes %> ">
      <%= yield %>
    </section>

    <section id="sidebar" class="<%= sidebar_classes %> order-first">
      <%= content_for(:sidebar) %>
    </section>

    <section id="sidebar" class="<%= show_sidebar_classes %> order-last">
      <%= content_for(:sidebar) %>
    </section>
  <% else %>
    <section class="col-md-12">
      <%= yield %>
    </section>
  <% end %>
<% end %>

<%= render template: "layouts/blacklight/base" %>
